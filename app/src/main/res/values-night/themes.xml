<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moroz_Lesson2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_marginStart">@dimen/button_margin_start_and_end</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_start_and_end</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextViewStyle">
        <item name="android:layout_marginStart">@dimen/margin_start_and_end_for_textViews</item>
        <item name="android:layout_marginEnd">@dimen/margin_start_and_end_for_textViews</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_for_all_textViews</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>